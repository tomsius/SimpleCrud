@model LoginViewModel

<h1>Log In</h1>
<form method="post" action="Login" class="mt-5">
  <div class="mb-3">
    <label for="" class="form-label">Username</label>
    <input type="text" class="form-control" asp-for="Username">
  </div>

  <div class="mb-3">
      <label for="" class="form-label">Password</label>
      <input type="password" class="form-control" asp-for="Password">
  </div>
  <div class="mb-3">
      <label for="keepLoggedIn" class="form-check-label">Keep me logged  in</label>
        <input type="checkbox" class="form-check-input" asp-for="KeepLoggedIn" id="keepLoggedIn">
  </div>

    @if (ViewData["ValidationError"] is not null)
    {
        <p class="mt-10 mb-10" style="color: red">@ViewData["ValidationError"]</p>
    }

  <button type="submit" class="btn btn-primary">Log in</button>
</form>